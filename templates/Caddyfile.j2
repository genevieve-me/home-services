music.{{ base_domain }} {
	# transparent proxy + websocket support + letsencrypt TLS
	reverse_proxy navidrome:4533
}
feeds.{{ base_domain }} {
	# to customize, set LISTEN_ADDR env for miniflux
	reverse_proxy miniflux:8080
}
photos.{{ base_domain }} {
	reverse_proxy immich:2283
}
nextcloud.{{ base_domain }} {
	reverse_proxy nextcloud-aio-apache:11000
}
nextcloud-admin.{{ base_domain }} {
	reverse_proxy https://nextcloud-aio-mastercontainer:8080 {
		transport http {
			# tls_trust_pool file /data/nextcloud-admin-ssl.crt
			# tls_server_name nextcloud.local
			# Skip TLS verification because cert has no SAN field, so the above doesn't work
			tls_insecure_skip_verify
		}
	}
}
irc.{{ base_domain }} {
	reverse_proxy thelounge:9000
}
koito.{{ base_domain }} {
	reverse_proxy koito:4110
}

{{ ntfy_subdomain }}.{{ base_domain }} {
	reverse_proxy ntfy-pod:8002
}
