[Container]
Pod=paperless.pod
ContainerName=paperless_ngx_db
Label=app=paperless
AutoUpdate=registry
Image=docker.io/library/postgres:17-trixie
Exec=-c listen_addresses=127.0.0.1
Environment=POSTGRES_DB=paperless POSTGRES_USER=paperless
Environment=PAPERLESS_URL=https://{{ podman_services.paperless.caddy.subdomain }}.{{ base_domain }}
Secret=paperless-db-password,type=env,target=POSTGRES_PASSWORD
Volume=paperless-db.volume:/var/lib/postgresql/data

[Service]
Restart=always
